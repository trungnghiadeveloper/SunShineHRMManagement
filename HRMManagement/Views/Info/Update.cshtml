@model HRMManagement.Models.Display

@{
    ViewData["Title"] = "Dashboard Page";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700,900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/updatefont.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/updatebootstrap.min.css">

    <!-- Style -->
    <link rel="stylesheet" href="~/css/updatestyle.css">

    <title>Chỉnh Sửa Thông Tin</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // AJAX request to fetch data for the select box
            $.ajax({
                url: '/Info/Update', // Replace with your controller action URL
                type: 'GET',
                success: function (data) {
                    // Populate select box with data
                    data.forEach(function (item) {
                        $('#gioitinh').append($('<option>', {
                            value: item.Value,
                            text: item.Text
                        }));
                    });
                },
                error: function (xhr, status, error) {
                    console.error(xhr.responseText);
                }
            });

            // AJAX request to fetch data for the date input field
            $.ajax({
                url: '/Info/Update', // Replace with your date action URL
                type: 'GET',
                success: function (dateValue) {
                    // Set value for date input field
                    $('#ngaysinh').val(dateValue);
                },
                error: function (xhr, status, error) {
                    console.error(xhr.responseText);
                }
            });
        });
    </script>
</head>

@if (Model != null)
{
    <body>
        <div class="content">
            <div class="container">
                <div class="row align-items-stretch justify-content-center no-gutters">
                    <div class="col-md-7">
                        <div class="form h-100 contact-wrap p-5">
                            <h3 class="text-center">Chỉnh sửa thông tin cá nhân</h3>
                            <form class="mb-5" method="post" id="updateForm" name="updateForm">
                                <div class="row">
                                    <div class="col-md-6 form-group mb-3">
                                        <label for="" class="col-form-label">Họ Đệm *</label>
                                        <input type="text" class="form-control" name="Hodem" id="hodem" value="@Model.HoDem"
                                        placeholder="Ho Dem">
                                    </div>
                                    <div class="col-md-6 form-group mb-3">
                                        <label for="" class="col-form-label">Tên *</label>
                                        <input type="text" class="form-control" name="Ten" id="ten" placeholder="Ten" value="@Model.Ten">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 form-group mb-3">
                                        <label for="" class="col-form-label">Giới Tính *</label>
                                        <select class="custom-select" id="gioitinh" name="Gioitinh" placeholder="Gioi Tinh" value ="@if (Model.GioiTinh == true)
                                        {
                                            <span>Nam</span>
                                        }
                                        else
                                        {
                                            <span>Nu</span>
                                        }">
                                        
                                            <option value="nam">Nam</option>
                                            <option value="nu">Nữ</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6 form-group mb-3">
                                        <label for="" class="col-form-label">Ngày Sinh *</label>
                                        <input type="date" class="form-control" id="ngaysinh" name="Ngaysinh" placeholder="Ngay Sinh" value="@Model.NgaySinh.ToString().Substring(0,10)">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 form-group mb-3">
                                        <label for="" class="col-form-label">Số Điện Thoại *</label>
                                        <input type="text" class="form-control" name="SDT" id="sdt" placeholder="Dien Thoai" value="@Model.Sdt">
                                    </div>
                                    <div class="col-md-6 form-group mb-3">
                                        <label for="" class="col-form-label">Email *</label>
                                        <input type="email" class="form-control" name="Email" id="email" placeholder="Email" value="@Model.Email">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 form-group mb-3">
                                        <label for="" class="col-form-label">CCCD *</label>
                                        <input type="text" class="form-control" name="CCCD" id="cccd" placeholder="CCCD" value="@Model.Cccd">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12 form-group mb-3">
                                        <label for="" class="col-form-label">Địa Chỉ *</label>
                                        <input type="text" class="form-control" name="DiaChi" id="diachi" placeholder="Dia Chi" value="@Model.DiaChi">
                                    </div>
                                </div>

                                <br>

                                <div class="row justify-content-center">
                                    <div class="col-md-7 form-group text-center">
                                        <input type="submit" value="Lưu"
                                        class="btn btn-block btn-primary rounded-0 py-2 px-4">
                                        <span class="submitting"></span>
                                    </div>
                                </div>
                            </form>
                            <div id="form-message-warning mt-4"></div>
                            <div id="form-message-success">Xong</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
}
</html>