@model HRMManagement.Models.Yeucaunghiphep

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container">
    <h2>Yêu cầu nghỉ phép</h2>
    <hr>
    <form asp-action="Index" class="row g-3">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="LoaiNghiPhep" class="form-label">Loại nghỉ phép</label>
                <select asp-for="LoaiNghiPhep" class="form-select" aria-label="Default select example">
                    <option value="">- Chọn loại nghỉ phép -</option>
                    <option value="1">Nghỉ phép năm</option>
                    <option value="2">Nghỉ phép cá nhân</option>
                    <option value="3">Vấn đề sức khỏe</option>
                    <option value="3">Sinh nở</option>
                </select>
                <span asp-validation-for="LoaiNghiPhep" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="LyDo" class="form-label">Lý do</label>
                <textarea asp-for="LyDo" class="form-control" rows="3"></textarea>
                <span asp-validation-for="LyDo" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="NgayBatDau" class="form-label">Ngày bắt đầu</label>
                <input asp-for="NgayBatDau" type="date" class="form-control" placeholder="Chọn ngày">
                <span asp-validation-for="NgayBatDau" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="NgayKetThuc" class="form-label">Ngày kết thúc</label>
                <input asp-for="NgayKetThuc" type="date" class="form-control" placeholder="Chọn ngày">
                <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Gửi yêu cầu</button>
        </div>
    </form>
</div>