@{
    ViewData["Title"] = "Employee Information";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        * {
            margin: 0;
        }

        .header {
            background-color: bisque;
            text-align: center;
            padding: 20px;
        }

        .footer {
            background-color: darkgray;
            text-align: center;
            padding: 20px;
            max-width: 100%;
            grid-column: 1/span2;
        }

        .body {
            font-family: Arial, Helvetica, sans-serif;
            font-size: x-large;
            display: inline;
            display: grid;
            grid-template-columns: 20% 80%;
            margin: 0 auto;
            max-width: 1600px;
        }

        .sidebar {
            grid-column: 1;
            background-color: rgb(10, 86, 133);
            max-width: 100%;
        }
    </style>
</head>

<body>
    <header class="header">
        <h1></h1>
    </header>

    <div class="body">
        <div class="sidebar">
            <h1></h1>
        </div>
        <div class="Content">
            <div class="row">
                <div class="col-sm-4 p-3">
                    <div class="container mt-3">
                        <div class="card" style="max-width: 400px;">
                            <img class="card-img-top" src="https://www.w3schools.com/bootstrap5/img_avatar5.png" alt="Profile image" style="width:100%">
                            <div class="card-body">
                                <h4 class="card-title">Kien Le</h4>
                                <p class="card-text">Software Engineer</p>
                                <a href="#" class="btn btn-primary">Edit</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-8 p-3">
                    <div class="info" style="max-width: 900px;">
                        <div class="info-title">
                            <h2 style="text-align: center; padding-top: 20px;">Personal Information</h2>

                        </div>

                        <div class="info-body" style="background-color:ghostwhite; border: solid; border-style: outset; margin-left: inherit ">
                            <hr>
                            <div class="row" style=" margin-left: inherit">
                                <div class="col-sm-4">Name:</div>
                                <div class="col-sm-8">Kien Le Hieu</div>
                            </div>
                            <hr>
                            <div class="row" style=" margin-left: inherit">
                                <div class="col-sm-4">Date of birth:</div>
                                <div class="col-sm-8">yyyy-mm-dd</div>
                            </div>
                            <hr>
                            <div class="row" style=" margin-left: inherit">
                                <div class="col-sm-4">Gender:</div>
                                <div class="col-sm-8">Female</div>
                            </div>
                            <hr>
                            <div class="row" style=" margin-left: inherit">
                                <div class="col-sm-4">Citizen Identity Card:</div>
                                <div class="col-sm-8">xxxxxxxxxxxx</div>
                            </div>
                            <hr>
                            <div class="row" style=" margin-left: inherit">
                                <div class="col-sm-4">Address:</div>
                                <div class="col-sm-8">xxxxxxxxxxxx</div>
                            </div>
                            <hr>
                            <div class="row" style=" margin-left: inherit">
                                <div class="col-sm-4">Phone:</div>
                                <div class="col-sm-8">xxxxxxxxxxxx</div>
                            </div>
                            <hr>
                            <div class="row" style=" margin-left: inherit">
                                <div class="col-sm-4">Email:</div>
                                <div class="col-sm-8">xxxxxxxxxxxx</div>
                            </div>
                            <hr>
                        </div>
                        <br>
                        <a href="#" class="btn btn-primary" style="padding: 20px; width: 100%; font-size: x-large;">Edit</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer">
        <h1></h1>
    </footer>
</body>


</html>




